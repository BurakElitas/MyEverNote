@using MyEvernote
@model MyEvernote.Entities.Note

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/NoteCreate.css" rel="stylesheet" />
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <h2>Yeni Not Ekleme Sayfası</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Create","Note", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                
                    
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Text,5,30 ,new { @class = "form-control col-md-10" })
                            
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.IsDraft, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsDraft)
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CategoryId,"Kategori Adı", htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control col-md-10" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class="col-form-label col-md-2"})
                        <div class="col-md-10">
                             <input type="file"  name="Resim" value="" />
                           
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                           
                            @Bootstrap.Button("submit", "success",string.Empty, "fa-plus", "Ekle")
                            @Bootstrap.LinkButton("/Note/Index", "light", string.Empty, "fa-arrow-alt-circle-left", string.Empty, "Listeye Geri Dön")
                        </div>
                    </div>
                
            }
        </div>
    </div>
 
</div>
